{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "nodemonConfig": {
    "events": {
      "quit": "npm run db:down"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "db:restart": "npm run db:down && npm run db:up",
    "db:down": "docker compose down --remove-orphans -v",
    "db:up": " docker compose up -d",
    "dev": "npm run db:restart && sleep 3 && npm run prisma:reset && nodemon -r tsconfig-paths/register src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma:migrate": "npm run db:restart && sleep 3 && npx prisma migrate dev --name init && npm run db:down",
    "prisma:reset": "npx prisma migrate reset --force"
  },
  "keywords": [],
  "author": "https://github.com/RenanGalvao",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "argon2": "^0.40.3",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "rate-limiter-flexible": "^5.0.3",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.10",
    "nodemon": "^3.1.4",
    "prisma": "^5.16.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
